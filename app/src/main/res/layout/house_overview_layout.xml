<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mascot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/head_of_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_12dp" />

    <TextView
        android:id="@+id/house_ghost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_12dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="@dimen/house_btn_width"
        android:layout_height="@dimen/house_btn_height"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@drawable/outline_button_background"
        android:text="@string/see_characters"
        android:textColor="@color/white_color"
        android:textSize="@dimen/medium_font" />

</LinearLayout>